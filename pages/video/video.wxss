.videoContainer {
  height: 100%;
}

.videoContainer .header {
  height: 80rpx;
  display: flex;
  text-align: center;
  padding: 20rpx 20rpx 0 20rpx;
}

.videoContainer .header .videoImg {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .videoSearch {
  height: 60rpx;
  flex: 1;
  border: 1px solid #aaa;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  color: red;
  margin: 0 20rpx;
}

.videoContainer .videoNavList {
  padding: 0 20rpx;
  height: 60rpx;
  display: flex;
}

.videoContainer .videoNavList .videoNavItem {
  font-size: 26rpx;
  margin-right: 50rpx;
  line-height: 60rpx;
  white-space: nowrap;
}

.videoContainer .videoNavList .videoNavItem.active {
  border-bottom: 2rpx solid red;
}

.videoContainer .videoList {
  height: calc(100vh - 20rpx + 34rpx + 25rpx + 15rpx);
}

.videoContainer .videoList .videoItem {
  padding: 0 20rpx;
}

.videoContainer .videoList .videoItem .video {
  margin-top: 20rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 30rpx;
}

.videoContainer .videoList .videoItem .videoImg {
  margin-top: 20rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 30rpx;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}

.videoList .videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}